#!/bin/sh
echo "╔════════════════════════════════════════════════════════════════╗"
echo "║                              TEST                              ║"
echo "╚════════════════════════════════════════════════════════════════╝"
cargo test -q || { exit 1; }
echo "╔════════════════════════════════════════════════════════════════╗"
echo "║                              LINT                              ║"
echo "╚════════════════════════════════════════════════════════════════╝"
cargo clippy -- -D warnings || { exit 1; }
echo "╔════════════════════════════════════════════════════════════════╗"
echo "║                              DOCS                              ║"
echo "╚════════════════════════════════════════════════════════════════╝"
cargo doc --target-dir docs || { exit 1; }